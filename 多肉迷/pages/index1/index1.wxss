.slider{
  width: 100%;
  height:220rpx;
  overflow: hidden;
}

.slider image,.slider swiper{
  width: 100%;
  height:220rpx;
}


.img-txt{
  position: relative;
  border-radius: 8%;
  background-color: white;
  box-shadow:4px 4px 15px #ccc;
  width:300rpx;
  height:270rpx;
}
.img-txt image{
  position: absolute;
  width: 96%;
  height: 80%;
  top: 2%;
  left: 2%;
  border-radius: 8%;
}
.img-txt text{
  position: absolute;
  display: flex;
  font-size: 14px;
  justify-content: center;
  align-items: center;
  text-color:black;
  width:100%;
  height: 20%;
  top: 80%;
}
